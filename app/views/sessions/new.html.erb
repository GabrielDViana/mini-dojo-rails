<%= form_tag sessions_path do %>
<div class="row ">
    <div class="field col-md-2 col-md-offset-3">
        <%= label_tag :email, 'Email' %>
    </div>
    <div class="field col-md-2">
        <%= text_field_tag :email %>
    </div>
</div>
<div class="row ">
    <div class="field col-md-2 col-md-offset-3">
        <%= label_tag :password, 'Password' %>
    </div>
    <div class="field col-md-2">
        <%= password_field_tag :password %>
    </div>
</div>
    <div class="actions" >
        <%= submit_tag "Login", class: 'btn btn-default btn-lg outline'%>
    </div>
</div>

<%= link_to "Voltar ", users_path, class: 'btn btn-default btn-lg '%>

<% end %>
