<p id="notice"><%= notice %></p>
<table class= "table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Show', user %></td>
        <% if logged_in? && current_user == user %>
          <td>
            <%= link_to "Editar Perfil", edit_user_path(user) %>
          </td>
        <% else %>
          <td>Não é possivel editar</td>
        <% end %>
        <td><%= link_to 'Remove', user, method: :delete,
            data: { confirm: 'Tem certeza que deseja apagar este usuário?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar usuário', new_user_path %>
<% if logged_in? %>
    <%= link_to "Log Out", logout_path %>
  <% else %>
  <%= link_to 'Logar', login_path %>
<% end %>
