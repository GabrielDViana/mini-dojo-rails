<%= form_for(@user) do |f| %>
  <div class="row ">
    <div class="field col-md-2 col-md-offset-3">
      <%= f.label :name, "Name:" %>
    </div>
    <div class="field col-md-2">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row ">
    <div class="field col-md-2 col-md-offset-3">
      <%= f.label :age, "Idade:" %>
    </div>
    <div class="field col-md-2">
      <%= f.text_field :age %>
    </div>
  </div>

  <div class="row ">
    <div class="field col-md-2 col-md-offset-3">
      <%= f.label :email, "Email:" %>
    </div>
    <div class="field col-md-2">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row ">
    <div class="field col-md-2 col-md-offset-3">
      <%= f.label :password, "Senha:" %>
    </div>
    <div class="field col-md-2">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="row ">
    <div class="field col-md-2 col-md-offset-3">
      <%= f.label :password_confirmation, "Confirmar Senha:" %>
    </div>
    <div class="field col-md-2">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <%= f.submit "Criar", class: 'btn btn-default btn-lg'%>
  <%= link_to "Voltar ", users_path, class: 'btn btn-default btn-lg '%>
<% end %>
